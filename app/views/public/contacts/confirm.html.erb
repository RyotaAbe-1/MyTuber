<table>
  <tbody>
    <tr>
      <td>お名前</td>
      <td><%= @contact.name %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= @contact.email %></td>
    </tr>

    <tr>
      <td>件名</td>
      <td><%= @contact.subject %></td>
    </tr>

    <tr>
      <td>お問い合わせ内容</td>
      <td><%= @contact.message %></td>
    </tr>
  </tbody>
</table>

<%= form_with model: @contact, local: true do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit "送信" %></div>
<% end %>
<%= form_with model: @contact, url: back_path, local: true do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit "入力画面に戻る" %></div>
<% end %>