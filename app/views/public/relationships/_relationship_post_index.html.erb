<% if current_user.following?(youtuber.user) %>
  <%= link_to "フォロー中", unfollow_path(youtuber.user, page: "post-index", youtuber_id: youtuber.id), method: :post, remote: true, class: "btn btn--blue" %>
<% else %>
  <%= link_to "フォローする", follow_path(youtuber.user, page: "post-index", youtuber_id: youtuber.id), method: :post, remote: true, class: "btn btn--green" %>
<% end %>