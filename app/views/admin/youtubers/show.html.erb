<div class="post-show">

  <%= render "common/admin_profile_bar", user: @user_profile, page: "post-show", youtuber: @youtuber %>

  <div class="post-show__container center">

    <div class="title"><%= "#{@user_profile.user_name}さんの投稿詳細" %></div>
    <div class="post-show__content">

      <div class="post-show__main">
        <p class="post-show__name">
          <%= @youtuber.name %>
        </p>
        <p class="post-show__genre">
          <%= "ジャンル：#{@youtuber.genre.genre_name}" %>
        </p>
        <div class="post-show__evaluation">
          <div class ="review-evaluation" data-score="<%= @youtuber.evaluation %>"></div>
          <div><%= "#{@youtuber.evaluation}/5" %></div>
        </div>
        <div class="post-show__introduce">
          <p>おすすめポイント</p>
          <div>
            <%= @youtuber.content %>
          </div>
        </div>
      </div>

      <div class="post-show__sub">
        <div class="post-show__delete">
          <%= link_to "削除", admin_youtuber_path(@youtuber), method: :delete, class: "btn btn__middle--red" %>
        </div>
        <div class="post-show__reaction">
          <%= "お気に入り#{@youtuber.number_of_favorites}件" %>
          <%= "コメント#{@youtuber.number_of_comments}件" %>
        </div>
        <div class="post-show__time">
          <%= "投稿日時：#{@youtuber.created_at.strftime('%Y/%m/%d %H:%M:%S')}" %>
        </div>
      </div>
    </div>

    <div class="comment">
      <div class="comment__index">
        <% @youtuber_comments.each do |comment| %>
          <%= attachment_image_tag comment.user, :image, :fill, 50, 50, fallback: "no_image.jpg" %>
          <%= comment.user.user_name %>
          <%= comment.content %>

          <%= link_to "削除", admin_youtuber_comment_path(@youtuber, comment), method: :delete %>

        <% end %>
      </div>
    </div>
  </div>

  <%= render "common/genre_search_bar", genres: @genres %>

</div>

<script>
$('.review-evaluation').empty();
  $('.review-evaluation').raty({
    readOnly: true,
    number: 5,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>