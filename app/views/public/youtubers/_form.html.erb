<%= form_with model: youtuber, local: true do |f| %>
　<table>
    <tr>
      <td>YouTuberの名前</td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td>
        <%= f.collection_select(:genre_id, genres, :id, :genre_name, {prompt: "ジャンルを選択してください"}) %>
      </td>
    </tr>
    <tr>
      <td>評価</td>
      <td id="evaluate" data-score="<%= youtuber.evaluation %>">
        <%= f.hidden_field :evaluation, value: 'score' %>
      </td>
    </tr>
    <tr>
      <td>おすすめポイント</td>
      <td>
        <%= f.text_area :content %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <% if edit_frag == true %>
          <%= f.submit "変更を保存" %>
        <% else %>
          <%= f.submit "投稿" %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>