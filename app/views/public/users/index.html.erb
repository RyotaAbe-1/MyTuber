<def class="user-index container">

  <%= render "common/profile_bar", user: @user_profile %>

  <div class="center">

    <% if current_user_followings %>
      <div class="title--blue">フォロー中一覧</div>
    <% elsif other_user_followings %>
      <div class="title--green"><%= "#{@user_profile.user_name}さんのフォロー中一覧" %></div>
    <% elsif current_user_followers %>
      <div class="title--blue">フォロワー一覧</div>
    <% elsif other_user_followers %>
      <div class="title--green"><%= "#{@user_profile.user_name}さんのフォロワー一覧" %></div>
    <% elsif params[:category] == "search-by-user" %>
      <p class="title--blue"><%= "「#{params[:keyword]}」のユーザー検索結果" %></p>
    <% else %>
      <div class="title--blue">ユーザー一覧</div>
    <% end %>

    <div class="container__content">
      <% @users.each do |user| %>
        <%= link_to user_path(user), class: "user-index__link" do %>

          <%= render "common/user_index", user: user %>

        <% end %>
      <% end %>

      <div class="paginate">
        <%= paginate @users %>
      </div>

    </div>

    <a href="#" class="back-top__link">
      <div class=back-top__arrow-back>
        <div class="back-top__arrow"></div>
      </div>
    </a>

  </div>

  <%= render "common/genre_search_bar", genres: @genres %>

</def>
