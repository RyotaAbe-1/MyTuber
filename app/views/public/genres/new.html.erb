<div class="add-genre">

  <%= render "common/profile_bar", user: @user_profile %>

  <div class="center">
    <div class="add-genre__container">
      <div class="title">ジャンル追加申請フォーム</div>
      <div class="add-genre__form">
        <%= form_with model: @genre, local: true do |f| %>
          <table class="add-genre__table">
            <tr>
              <td colspan="2" class="add-genre__caution">まだ登録されていないジャンルを申請してください</td>
            </tr>
            <tr>
              <td>ジャンル名</td>
              <td class="add-genre__genre">
                <%= f.text_field :genre_name, class: "add-genre__genre-input" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td class="add-genre__submit">
                <%= f.submit "追加申請", class: "btn btn__big--green" %>
              </td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>

  <%= render "common/genre_search_bar", genres: @genres %>

</div>
