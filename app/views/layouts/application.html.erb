<!DOCTYPE html>
<html>
  <head>
    <title>MyTuber</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="headder">
      <div class="hedder__logo">
        <%= link_to image_tag("pf_icon1.png"), root_path %>
      </div>

      <div class="nav">
        <% if user_signed_in? %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav__btn" %>
        <% elsif admin_signed_in? %>
          <%= link_to "ジャンル追加", new_admin_genre_path, class: "nav__btn" %>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav__btn" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "nav__btn" %>
          <%= link_to "サインアップ", new_user_registration_path, class: "nav__btn"  %>
        <% end %>
      </div>
    </div>

    <div class="main">
      <%= yield %>
    </div>


    <div class="footer">

    </div>

  </body>
</html>
