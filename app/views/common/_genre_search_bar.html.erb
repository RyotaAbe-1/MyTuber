<div class="genre-search right">
  <div class="genre-search__content">
    
    <p class="genre-search__title--orange">ジャンル検索</p>
    
    <div class="genre-search__list">
      <ul>
        <% if user_signed_in? %>
          <li class="genre-search__list--none">
            <%= link_to "ジャンルを追加+", new_genre_path, class: "genre-search__link" %>
          </li>
          <li class="genre-search__list--none">
            <%= link_to "全てのジャンル", youtubers_path(sort: "genre-search-all"), class: "genre-search__link" %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="genre-search__list--none">
            <%= link_to "全てのジャンル", admin_youtubers_path(sort: "genre-search-all"), class: "genre-search__link" %>
          </li>
        <% end %>
        
        <% genres.each do |genre| %>
          <li>
            <% if user_signed_in? %>
              <%= link_to "#{genre.genre_name}", youtubers_path(genre_id: genre.id ,sort: "genre-search"), class: "genre-search__link" %>
            <% elsif admin_signed_in? %>
              <%= link_to "#{genre.genre_name}", admin_youtubers_path(genre_id: genre.id ,sort: "genre-search"), class: "genre-search__link" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    
  </div>
</div>